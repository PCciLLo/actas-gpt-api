{
  "openapi": "3.1.0",
  "info": {
    "title": "ActasGPT",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "https://actas-gpt-api.onrender.com",
      "description": "Render deployment"
    }
  ],
  "paths": {
    "/generar-acta": {
      "post": {
        "operationId": "generar_acta_endpoint_generar_acta_post",
        "summary": "Generar Acta Endpoint",
        "description": "Genera un archivo .docx con los datos del acta",
        "x-openai-allow": true,
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Payload"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "filename": { "type": "string" },
                    "content": { "type": "string" }
                  },
                  "required": ["filename", "content"]
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Payload": {
        "type": "object",
        "properties": {
          "datos": {
            "$ref": "#/components/schemas/ActaInput"
          }
        },
        "required": ["datos"]
      },
      "ActaInput": {
        "type": "object",
        "properties": {
          "ASUNTO": { "type": "string" },
          "FECHA": { "type": "string" },
          "CLIENTE": { "type": "string" },
          "HORA_INICIO": { "type": "string" },
          "HORA_FIN": { "type": "string" },
          "PROYECTO": { "type": "string" },
          "TIPO_REUNION": { "type": "string" },
          "ID_PROYECTO": { "type": "string" },
          "OBJETIVO": { "type": "string" },
          "AGENDA": { "type": "string" },
          "TEMAS": {
            "type": "array",
            "items": { "type": "string" }
          },
          "ACUERDOS": {
            "type": "array",
            "items": { "type": "string" }
          },
          "PARTICIPANTES": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "nombre": { "type": "string" },
                "iniciales": { "type": "string" },
                "compañía": { "type": "string" }
              }
            }
          },
          "PROXIMOS_PASOS": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "responsable": { "type": "string" },
                "título": { "type": "string" },
                "descripcion": { "type": "string" },
                "fecha": { "type": "string" },
                "estado": { "type": "string" }
              }
            }
          }
        }
      },
      "HTTPValidationError": {
        "type": "object",
        "properties": {
          "detail": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            }
          }
        }
      },
      "ValidationError": {
        "type": "object",
        "properties": {
          "loc": {
            "type": "array",
            "items": { "type": "string" }
          },
          "msg": { "type": "string" },
          "type": { "type": "string" }
        },
        "required": ["loc", "msg", "type"]
      }
    }
  }
}